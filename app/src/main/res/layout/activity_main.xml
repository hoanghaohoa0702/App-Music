<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:padding="7dp"
        android:id="@+id/tv_title"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back2"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_previous"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/bt_previous"
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_stop"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/play2"
        android:layout_toRightOf="@+id/bt_stop"
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_play"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/bt_play"
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_forward"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:id="@+id/seekBar"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_play"
        android:layout_marginBottom="20dp"
        android:outlineAmbientShadowColor="@color/purple_500"
        android:outlineSpotShadowColor="#ffffff"
        />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:text="00:00"
        android:layout_above="@+id/seekBar"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:text="00:00"
        android:layout_above="@+id/seekBar"
        android:layout_marginBottom="15dp"
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/cd1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="150dp"
        android:id="@+id/iv_disc"
        />

</RelativeLayout>